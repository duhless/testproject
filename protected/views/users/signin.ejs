<% layout('../layout') %>

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> SignIn</h1>

    <% if(message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="form-group">
            <label for="loginEmail">E-mail</label>
            <input type="text" class="form-control" name="email" id="loginEmail" autofocus />
        </div>
        <div class="form-group">
            <label for="loginPasswd">Пароль</label>
            <input type="password" class="form-control" name="password" id="loginPasswd" />
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="not_remember" /> Чужой компьютер
            </label>
        </div>

        <button type="submit" class="btn btn-warning">Signin</button>
    </form>

</div>